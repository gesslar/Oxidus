{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "/adm/dist/fluffos/": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "/adm/dist/fluffos/": true
  },
  "files.watcherExclude": {
    "**/.github/workflows/**": true
  },
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": ".vscode/LLM_Doc_Instructions_FluffOS.md"
    },
    {
      "file": ".vscode/LLM Coding Style.md"
    }
  ],
  "[lpc]": {
    "editor.tabCompletion": "onlySnippets",
    "editor.snippetSuggestions": "top",
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },
  "editor.fontLigatures": "'ss02' on",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "files.associations": {
    "*.lpml": "yaml",
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  "editor.tabSize": 2,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#5d5d7e",
    "activityBar.background": "#5d5d7e",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#ae9191",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#5d5d7e",
    "statusBar.background": "#474761",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#5d5d7e",
    "statusBarItem.remoteBackground": "#474761",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#474761",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#47476199",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.remoteColor": "#474761"
}
